{
    "compilerOptions": {
        "target": "es5",
        "jsx": "react",
        "module": "commonjs",
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "noImplicitAny": false,
        "downlevelIteration": true, 
        "esModuleInterop": true,
        "baseUrl": "./",
        "paths": { // Указываем ссылки до директорий в проекте, чтобы каждый раз в импортах не писать относительные пути
            "app": ["src/components"],
            "blocks/*": ["src/blocks/*"],
        },
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        
    },
    "exclude": [
        "node_modules"
    ]
}