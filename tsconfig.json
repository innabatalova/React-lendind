{
    "compilerOptions": {
        "target": "es2017",
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "sourceMap": true,
        "removeComments": true,
        "noImplicitAny": false,
        "downlevelIteration": true, 
        "esModuleInterop": true,
        "baseUrl": "./",
        "paths": {
            "@src/*": ["src/*"],
          }
        
    },
    "exclude": [
        "node_modules"
    ]
}